<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- DEFINITIVE FIX: Using a dedicated preferenceTheme to force correct text color -->
    <style name="Theme.NextDO" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_accent</item>
        <item name="colorPrimaryVariant">@color/light_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_on_surface</item>
        <item name="colorOnSurfaceVariant">@color/light_on_surface_variant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Window background. -->
        <item name="android:windowBackground">@color/light_background</item>

        <!-- Set status bar icon color to dark -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Apply the custom theme to the settings screen -->
        <item name="preferenceTheme">@style/App.Preference.Theme</item>
    </style>

    <style name="App.Preference.Theme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <!-- This forces the category title text to be black in light mode -->
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Header colors - darker gray -->
        <item name="colorPrimary">#2C2C2E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Background colors - darker surface -->
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Shape -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <!-- Buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.TextButton.Dialog</item>
    </style>

    <style name="Widget.App.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Removed Widget.App.MaterialCalendar.Item to ensure build success -->

    <style name="ThemeOverlay.App.MaterialTimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.TimePicker.Boxy</item>
        <!-- Square AM/PM buttons -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.TimePicker.Boxy</item>
        <!-- Buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.TextButton.Dialog</item>
    </style>

    <style name="ShapeAppearance.App.TimePicker.Boxy" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="CalendarDayHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
