<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Help &amp; FAQ"
            app:titleTextColor="?attr/colorOnSurface" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#000000"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/nothing_card_bg"
                android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequently Asked Questions"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="?attr/colorSecondary"
                android:layout_marginBottom="16dp" />

            <!-- Q1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How do I create a new task?"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap the + button at the bottom right of the screen. Enter your task details and tap Save."
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="?attr/colorOnSurface"
                android:alpha="0.1" />

            <!-- Q2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How do I delete a task?"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Swipe the task to the left to delete it properly."
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="?attr/colorOnSurface"
                android:alpha="0.1" />

            <!-- Q3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How do I edit a task?"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap on any task to open the edit screen or swipe it to the right."
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="?attr/colorOnSurface"
                android:alpha="0.1" />

            <!-- Q4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Can I change the app theme?"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes! Go to Settings from the menu and choose your preferred accent color and background."
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
